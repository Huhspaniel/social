{
  "name": "social",
  "version": "0.0.0",
  "description": "Social networking application built using AWS, PostgreSQL, Node.js, Express, and Angular",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node cluster.js",
    "start:dev": "concurrently \"nodemon --ignore client\" \"npm run client\"",
    "client": "cd client && npm run start -- -o",
    "install": "cd client && npm install",
    "ng": "cd client && ng",
    "build": "cd client && npm run build",
    "deploy": "concurrently \"npm run build\" \"eb deploy $ENV\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Huhspaniel/social.git"
  },
  "author": "Huhspaniel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Huhspaniel/social/issues"
  },
  "homepage": "https://github.com/Huhspaniel/social#readme",
  "dependencies": {
    "bcrypt": "^3.0.3",
    "cluster": "^0.7.7",
    "express": "^4.16.4",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.4.0",
    "pg": "^7.7.1",
    "pg-hstore": "^2.3.2",
    "dotenv": "^6.2.0",
    "sequelize": "^4.42.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.9"
  }
}
